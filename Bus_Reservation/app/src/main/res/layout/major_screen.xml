<?xml version="1.0" encoding="utf-8"?>
<!--RealativeLayout으로 쓰기-->
<!--여러 종류의 레이아웃 중 원하는 것 가져다 쓰기 쉬움-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/major_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_centerInParent="true"
    tools:context="com.example.hyeryeongsong.bus_reservation.MajorActivity">

    <TextView
        android:id="@+id/r_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUS\nReservation"
        android:textSize="40dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_margin="40dp"/>

    <Button
        android:id="@+id/r_btn"
        android:layout_below="@+id/r_txt"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="RESERVATION"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:onClick="r_b_clicked"/>

    <Button
        android:id="@+id/admin_btn"
        android:layout_below="@+id/r_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="ADMIN MODE"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:onClick="admin_b_clicked"/>

    <Button
        android:id="@+id/exit_btn"
        android:layout_below="@+id/admin_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="EXIT"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:onClick="exit_b_clicked"/>

</RelativeLayout>
