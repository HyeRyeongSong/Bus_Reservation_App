<?xml version="1.0" encoding="utf-8"?>
<!--RealativeLayout으로 쓰기-->
<!--여러 종류의 레이아웃 중 원하는 것 가져다 쓰기 쉬움-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signin_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hyeryeongsong.bus_reservation.SignInActivity">

    <TextView
        android:id="@+id/login_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="60dp"
        android:gravity="center"
        android:text="Login"
        android:textSize="60dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_txt"
        android:layout_centerInParent="true"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/layout_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <TextView
                android:id="@+id/id_txt"
                android:layout_width="44sp"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:gravity="center"
                android:text="ID : "
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/id_edit"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/id_txt"
                android:gravity="left"
                android:hint="ID here"
                android:inputType="text"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/pw_txt"
                android:layout_width="44sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_txt"
                android:layout_margin="10sp"
                android:gravity="center"
                android:text="PW : "
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/pw_edit"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_txt"
                android:layout_toRightOf="@+id/pw_txt"
                android:gravity="left"
                android:hint="PW here"
                android:inputType="text"
                android:textSize="16sp"
                android:password="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_1"
            android:layout_centerHorizontal="true"
            android:layout_margin="30sp"
            android:gravity="center">

            <Button
                android:id="@+id/login_btn"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:text="LOGIN"
                android:textSize="16sp"
                android:onClick="login_b_clicked"/>

            <Button
                android:id="@+id/signup_btn"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:layout_toRightOf="@+id/login_btn"
                android:text="SIGNUP"
                android:textSize="16sp"
                android:onClick="signup_b_clicked"/>

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
